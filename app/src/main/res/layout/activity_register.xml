<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterAct"
    android:background="@drawable/bg">


 <TextView
     android:id="@+id/logo"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_centerInParent="true"
     android:padding="16dp"
     android:shadowColor="#000000"
     android:shadowDx="2"
     android:shadowDy="2"
     android:shadowRadius="3"
     android:text="Register"
     android:textColor="#FFFFFF"
     android:textSize="34sp"
     android:textStyle="bold"
     app:layout_constraintBottom_toBottomOf="parent"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintHorizontal_bias="0.498"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toTopOf="parent"
     app:layout_constraintVertical_bias="0.087" />

 <EditText
     android:id="@+id/et_name_reg"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginStart="40dp"
     android:layout_marginTop="40dp"
     android:layout_marginEnd="40dp"
     android:background="@drawable/input_bg"
     android:drawableStart="@drawable/baseline_person"
     android:drawablePadding="10dp"
     android:ems="10"
     android:hint="Name"
     android:inputType="text"
     android:paddingLeft="20dp"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="20dp"
     android:textAlignment="viewStart"
     android:textColor="#FFFFFF"
     android:textColorHint="#FFFFFF"
     android:textColorLink="#FFFFFF"
     app:layout_constraintEnd_toEndOf="parent"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@+id/logo" />

 <EditText
     android:id="@+id/et_surname_rg"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:background="@drawable/input_bg"
     android:drawableStart="@drawable/baseline_person"
     android:drawablePadding="10dp"
     android:ems="10"
     android:hint="Surname"
     android:inputType="text"
     android:paddingLeft="20dp"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="20dp"
     android:textAlignment="viewStart"
     android:textColor="#FFFFFF"
     android:textColorHint="#FFFFFF"
     app:layout_constraintEnd_toEndOf="@+id/et_name_reg"
     app:layout_constraintStart_toStartOf="@+id/et_name_reg"
     app:layout_constraintTop_toBottomOf="@+id/et_name_reg" />

 <EditText
     android:id="@+id/et_mail_reg"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:background="@drawable/input_bg"
     android:drawableStart="@drawable/baseline_alternate_email"
     android:drawablePadding="10dp"
     android:ems="10"
     android:hint="Email"
     android:inputType="textEmailAddress"
     android:paddingLeft="20dp"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="20dp"
     android:textAlignment="viewStart"
     android:textColor="#FFFFFF"
     android:textColorHint="#FFFFFF"
     app:layout_constraintEnd_toEndOf="@+id/et_surname_rg"
     app:layout_constraintStart_toStartOf="@+id/et_surname_rg"
     app:layout_constraintTop_toBottomOf="@+id/et_surname_rg" />

 <EditText
     android:id="@+id/et_pass_reg"
     android:layout_width="0dp"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:background="@drawable/input_bg"
     android:drawableStart="@drawable/baseline_security"
     android:drawablePadding="10dp"
     android:ems="10"
     android:hint="Password"
     android:inputType="textPassword"
     android:paddingLeft="20dp"
     android:paddingTop="10dp"
     android:paddingRight="10dp"
     android:paddingBottom="20dp"
     android:textAlignment="viewStart"
     android:textColor="#FFFFFF"
     android:textColorHint="#FFFFFF"
     app:layout_constraintEnd_toEndOf="@+id/et_mail_reg"
     app:layout_constraintStart_toStartOf="@+id/et_mail_reg"
     app:layout_constraintTop_toBottomOf="@+id/et_mail_reg" />

 <ImageButton
     android:id="@+id/im_btn_reg_reg"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="24dp"
     android:background="@drawable/btn_bg"
     android:scaleType="centerInside"
     app:layout_constraintStart_toStartOf="@+id/et_pass_reg"
     app:layout_constraintTop_toBottomOf="@+id/et_pass_reg"
     app:srcCompat="@drawable/soccerball1" />

 <ImageButton
     android:id="@+id/im_btn_reg_log"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:background="@drawable/btn_bg"
     android:scaleType="centerInside"
     app:layout_constraintBottom_toBottomOf="@+id/im_btn_reg_reg"
     app:layout_constraintEnd_toEndOf="@+id/et_pass_reg"
     app:layout_constraintTop_toTopOf="@+id/im_btn_reg_reg"
     app:srcCompat="@drawable/soccerball1" />
</androidx.constraintlayout.widget.ConstraintLayout>